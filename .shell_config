# Defaults
HISTSIZE=99999
SAVEHIST=99999
export EDITOR="vim"

#
# Colors (for printing)
#

# ANSI Colors
export BOLD=""
export RESET="\e[0m"
export BLACK="\e[0;30m"
export BLUE="\e[0;34m"
export CYAN="\e[0;36m"
export GREEN="\e[0;32m"
export ORANGE="\e[0;33m"
export PURPLE="\e[0;35m"
export RED="\e[0;31m"
export VIOLET="\e[0;35m"
export WHITE="\e[0;37m"
export YELLOW="\e[0;33m"

