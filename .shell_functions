# Compile and execute simple java program in one command
jcar() {
    javac "$1" && java "$(basename "$1" .java)" "${@:2}" && \rm "$(basename "$1" .java).class"
}

# Compile and execute simple java program in one command
gcar() {
    g++ -Wall "$1" && ./a.out "${@:2}" && \rm a.out
}
